<div class="container mt-5 mb-5">
  <div class="row">
    <div class="col text-center">

      <h2>Please update your vinyl info</h2>

      <div class="form-container">

      <%= simple_form_for(@vinyl) do |f| %>
        <%= f.input :title %>
        <%= f.input :artist %>
        <%= f.input :release_date %>
        <%= f.input :address, id:"vinyl_address" %>
        <%= f.submit class:"button first", id:"submit" %>
      <% end %>
      </div>

    </div>
  </div>
</div>